<div class="grid">
    <div>
          <div class=" p-3 m-0 nested border nt">
                <h3 class="font-weight-bolder"> WHAT IS ON YOUR MIND </h3>
            <div class="card-body p-3">
                <%= form_with url: "/opinions", method: :post do |form| %>
                <%= form.text_field :text, class: 'form-control mb-2' %>
                <%= form.submit "Create", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>

        <h6 class="font-weight-bolder pt-3 pl-3"> Recent Thoughts </h6>
              <% @opinions.each do |tweet| %>
                <div class='d-flex align-items-center p-3'>
            <div>
               <%= show_author_image(tweet, class: "rounded-circle side-img")%>

            </div>

                  <div>
                  <h5 class= 'font-weight-bolder ml-3 pt-3 fsz'> <%= tweet.author.username %> </h5>
                    <p class= "pl-3 fsz-2 text-muted"> <%= tweet.text %> </p>
                  </div>
                </div>

              <% end %>
    </div>

<div>
  <div class="card-body">
                <h6 class="pb-0 mb-0 font-weight-bolder"> WHO YOU MAY KNOW </h6><hr>
                <div class= "text-muted">
                    <% @users_to_follow.each do |user| %>
                        <%= link_to user_path(user) do%>
                            <div class="d-flex card-body align-items-center">
                               <%= user_image(user, class: "f-by-img rounded-circle") %>
                                <% end %>
                                <h4 class="badge badge-dark ml-3 mb-0"> <%= user.username %> </h4>

                    <%= link_to 'Follow', user_path(user), method: :patch, class: 'badge badge-primary ml-3' %>

                            </div>

                    <% end %>
                </div>
            </div>
</div>
</div>
